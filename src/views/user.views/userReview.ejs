<style>
  .profile-photo {
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 50%;
    border: 2px solid #ddd;
    margin-top: 20px;
  }
  .profile-container {
    background-color: #f8f9fa;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin-top: 20px;
  }
  .profile-info h2 {
    margin-top: 10px;
  }
  .input-section {
    margin-top: 30px;
  }
  .btn-container {
    display: flex;
    justify-content: flex-start;
    gap: 15px;
    margin-top: 20px;
  }
</style>
<div class="container profile-container">
  <div class="row align-items-center">
    <div class="col-md-4 text-center">
      <div style="height: 10rem; width: 10rem;">
        <!-- <img src="profile.jpg" alt="user Profile"> -->
      </div>
    </div>
    <%if(user){%>
    <div class="col-md-8">
      <div class="profile-info">
        
        
        <h2 ><%=user.userName %></h2>
        <p>User Email : <strong><%=user.userEmail %> </strong></p>
        <p>User Role :  <strong><%=user.userRole %></strong></p>
      </div>
    </div>
  </div>
  <form method="post" action="/user/review">
    <p hidden="true">user._id</p>
    <input type="hidden" value="<%=user._id%>" name="uID" readonly>
    <div class="row input-section">
      <div class="col-md-6">
        <div class="form-group">
          <label for="input1">Write Review</label>
          <input type="text" name="review" class="form-control" id="input1" placeholder="Enter your review">
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label for="input3">Give ratings between 1 to 5</label>
          <input type="number" name="rating" max="5" min="1" class="form-control" id="input3" placeholder="Enter your rating">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 btn-container">
        <button type="submit" class="btn btn-success">Submit</button>
        <a href="/user" class="btn btn-danger">Close</a>
      </div>
    </div>
  </form>

  <%}%>
</div>